# Database Configuration
# Oracle database connection credentials

# Database username
DB_USER=your_username

# Database password
DB_PASSWORD=your_password

# Database DSN (Data Source Name) format: host:port/service_name
# For local Oracle Express Edition: localhost:1521/XE
# For school Oracle DB: use the provided connection string
DB_DSN=localhost:1521/XE

# Connection Pool Configuration (Optional)
# These values control the database connection pool behavior

# Minimum number of connections to maintain in the pool
# Lower values reduce resource usage but may increase connection time
DB_POOL_MIN=2

# Maximum number of connections allowed in the pool
# Higher values support more concurrent users but use more resources
DB_POOL_MAX=10

# Number of connections to create when pool needs to grow
# Smaller values provide finer control over resource allocation
DB_POOL_INCREMENT=1

# Flask Configuration (Optional)
# Application environment: development, production, or testing
FLASK_ENV=development

# Enable debug mode (True/False)
# WARNING: Set to False in production for security
DEBUG=True
